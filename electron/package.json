{
    "version": "0.1.0",
    "name": "lost-mine",
    "productName": "Lost Mine",
    "author": {
        "name": "Niner Games",
        "email": "hello@ninergames.com",
        "url": "https://lostmine.cc/"
    },
    "main": "main.js",
    "build": {
        "appId": "com.ninergames.lostmine",
        "win": {
            "target": "nsis"
        },
        "extraResources": [
            {
                "from": "../game",
                "to": "game"
            }
        ],
        "artifactName": "Lost Mine ${version}.${ext}"
    },
    "nsis": {
        "oneClick": true,
        "perMachine": false,
        "allowElevation": true,
        "allowToChangeInstallationDirectory": false
    },
    "devDependencies": {
        "electron": "^29.0.0",
        "electron-builder": "^26.0.12",
        "electron-packager": "^17.1.2"
    },
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "pack": "npx electron-packager . phaser-game --platform=win32 --arch=x64 --overwrite"
    }
}