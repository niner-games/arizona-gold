{
    "name": "lost-mine",
    "version": "1.0.0",
    "main": "main.js",
    "build": {
        "productName": "Lost Mine",
        "version": "${env.VERSION}",
        "directories": {
            "output": "dist"
        },
        "win": {
            "icon": "icon.ico",
            "target": [
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ]
        },
        "portable": {
            "artifactName": "lost-mine-${version}.exe"
        }
    },
    "scripts": {
        "build": "npx electron-builder --win"
    },
    "devDependencies": {
        "electron": "^28.3.2",
        "electron-builder": "^24.6.0"
    }
}