{
    "name": "lost-mine",
    "version": "1.0.0",
    "main": "main.js",
    "build": {
        "productName": "Lost Mine",
        "version": "${env.VERSION}",
        "directories": {
            "output": "dist"
        },
        "win": {
            "icon": "icon.ico",
            "target": [
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ]
        },
        "portable": {
            "artifactName": "lost-mine-${version}.exe"
        }
    },
    "scripts": {
        "build": "npx electron-builder --win",
        "audit": "npm audit --audit-level=critical",
        "outdated": "npm outdated"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "devDependencies": {
        "electron": "37.2.3",
        "electron-builder": "26.0.12"
    }
}