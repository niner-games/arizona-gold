{
    "version": "0.1.0",
    "name": "lost-mine",
    "description": "A single-player adventure set deep in Arizona’s Superstition Mountains. Inspired by the legend of the Lost Dutchman Mine, players unravel cryptic clues, brave rugged terrain, and dodge ancient traps in search of Jacob Waltz’s buried gold. With immersive visuals and ambient storytelling, it’s a journey through folklore, solitude, and treasure beneath Weaver’s Needle.",
    "author": {
        "name": "Niner Games",
        "email": "hello@ninergames.com",
        "url": "https://ninergames.com/lost-mine/"
    },
    "license": "UNLICENSED",
    "productName": "Lost Mine",
    "main": "main.js",
    "build": {
        "appId": "com.ninergames.lostmine",
        "extraResources": [
            {
                "from": "../vite/dist",
                "to": "game"
            }
        ],
        "artifactName": "Lost Mine ${version}.${ext}",
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "mac": {
            "icon": "icon.icns"
        },
        "linux": {
            "icon": "icon.png"
        }
    },
    "nsis": {
        "oneClick": true,
        "perMachine": false,
        "allowElevation": true,
        "allowToChangeInstallationDirectory": false
    },
    "devDependencies": {
        "electron": "^37.2.3",
        "electron-builder": "^26.0.18",
        "@electron/packager": "^18.3.6"
    },
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    }
}