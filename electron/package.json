{
    "name": "lost-mine",
    "version": "1.0.0",
    "author": {
        "name": "Niner Games",
        "email": "hello@ninergames.com",
        "url": "https://lostmine.cc/"
    },
    "license": "UNLICENSED",
    "main": "main.js",
    "build": {
        "asar": true,
        "productName": "Lost Mine",
        "directories": {
            "output": "dist"
        },
        "win": {
            "icon": "icon.ico",
            "target": [
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ]
        },
        "portable": {
            "artifactName": "lost-mine-${version}.exe"
        }
    },
    "scripts": {
        "build": "npx electron-builder --win",
        "audit": "npm audit --audit-level=critical",
        "outdated": "npm outdated"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "devDependencies": {
        "electron": "37.2.3",
        "electron-builder": "26.0.12"
    },
    "files": [
        "main.js",
        "../src/**/*",
        "!**/node_modules/*/{test,__tests__,example}",
        "!**/.gitkeep"
    ]
}